			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Job Posting</h1>
				</header>
				
				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Post a new Job</h3>
							<hr>

							<form method="post" action="/careers">

                                <div class="top-margin">
                                    <span role="alert" class="text-danger" name="err"><%=error1%></span>
                                </div>
								<div class="top-margin">
									<label>Job Title <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" name="jtitle" required="true">
                                </div>
								<div class="top-margin">
									<label>Job Description <span class="text-danger">*</span></label>
                                  <textarea cols="25" rows="4" class="form-control" name="desc" required="true"></textarea> 
       
								
								</div>

								<div class="top-margin">
										<label>Skills Required <span class="text-danger">*</span></label>
										<textarea cols="25" rows="7" class="form-control" name="skills" type="text" required="true"></textarea> 
       
								</div>
								<div class="top-margin">
										<label>Start Date<span class="text-danger">*</span></label>
										<input class="form-control" name="startdate" type="date" required="true">
								</div>
								<div class="top-margin">
										<label>Expiration Date <span class="text-danger">*</span></label>
										<input class="form-control" name="exdate" type="date" required="true">
								</div>
								<div class="top-margin">
										<label>Region <span class="text-danger">*</span></label>
										<input type="text" class="form-control" name="region" required="true">
								</div>

								<hr>

								<div class="row">
									<div class="col-lg-4">
										                       
									</div>

                                        <button id="submit" class="apply">Post Job</button>

								</div>
							</form>
						</div>
					</div>

				</div>
				
