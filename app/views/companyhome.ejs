</head>

<body>

<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top headroom" >
    <div class="container">
        <div class="navbar-header">
            <!-- Button for smallest screens -->
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
            <a class="navbar-brand" href="/"><img src="/assets/images/logo.png" width="50 px" height="50 px" alt="Pronet" ></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav pull-left">
                <li><a href="/home">Home</a></li>
                <li><a href="/userprofile" >Profile</a></li>
                <li><a href="/userfollowing">Following</a></li>
                <li><a href="/search">Search</a></li>
            </ul>

            <ul class="nav navbar-nav pull-right">

                <li>
                    <a class="btn" href="/signout">Sign out</a>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>
<!-- /.navbar -->
<header id="head" class="secondary"></header>

<!-- container -->
<div class="container">
    <!--place code here-->
    <div class="row">

        <!-- Article main content -->
        <article class="col-xs-12 maincontent">
            <header class="page-header">
                <h1 class="page-title">Company Profile</h1>
            </header>
            <div class="div_style" align="center">
                <div class="panel-body">
                    <hr>

                    <div class="imgup">
                            <div class="thumbnail pull-left" >

                                <img id="companypic" class="companypic" src="<%=data.logo%>" width="200 px" height="200 px" >

                            </div>
                    </div>
                    <div class="col-sm-1 text-left">
                    </div>
                        <div class="media-body">
                            <div class="editable">
                                <lable><b>Company Name</b></lable>
                                <h5>
                                    <span role="alert" class="text media-heading ed" id="name" name="name"><%=data.company_name%></span>
                                    <input type="hidden" id="name" name="name" value="<%=data.company_name%>" >

                                </h5>
                            </div>

                            <div class="editable">
                                <lable><b>Company Url</b></lable>
                                <h5>
                                    <span role="alert" class="text media-heading ed" id="url" name="url"><%=data.url%></span>

                                </h5>
                            </div>
                            <div class="editable">
                                <p><span class="label label-warning pull-left"><%=data.followerCount%> followers</span></p>
                            </div>
                            <br>
                            <form method="post" action="/follow">
                                <input type="text" hidden="hidden" id="thisID" name="thisID" >
                                <input type="text" hidden="hidden" id="sampleID" name="sampleID" value=<%=c_id%>|<%=data.logo%>|<%=page%>|<%=data.company_name%>>
                                <input type="text" hidden="hidden" id="followerCount" name="followerCount" value=<%=data.followerCount%>>

                                <button id="foll" class="btn btn-xs btn-action btn-primary pull-right" type="submit"><span class="glyphicon glyphicon-circle"></span><%=data.follow%></button>
                            </form>

                        </div>

                </div>
            </div>

            <br>
            <div class="div_style">

                <div class="editable">

                    <label><b>Overview</b></label>

                    <h5>
                        <span role="alert" class="text media-heading ed" id="overview" name="overview"><%=data.overview%></span>

                    </h5>
                </div>
            </div>


            <br>
            <br>
            <div class="div_style">

                <div class="panel-body">

                    <div class="row">
                        <div class="editable">
                            <br>
                            <h3 class="page-title" align="center">Recent Posts</h3>
                            <hr>
                        </div>
                    </div>

                    <% for(var i=0; i < data.feeds.length; i++) { %>
                    <div class="container" margin-top="40px" width="700px">
                        <form method="post" action="/deletefeeds/<%=data.feeds[i].id%>">
                            <div>

                                <h4><b><%=data.feeds[i].email%></b></h4>
                                <h5><%=data.feeds[i].password%></h5>
                                 <br>
                            </div>
                        </form>
                    </div>
                    <hr>
                    <%   }
                    %>
                </div>
            </div>
        </article>
    </div>
</div>
